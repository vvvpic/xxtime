<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="net.xxtime.activity.ToemployedActivity">

    <include layout="@layout/header"/>

    <RelativeLayout
        android:id="@+id/rlDel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#fdf6dd">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/txt_12"
            android:textColor="@color/yellow"
            android:text="若不能签到，请提前告知商家！"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/ivDel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ico_del"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="周一"
            android:gravity="center"
            android:textColor="@color/txt_666"
            android:textSize="@dimen/txt_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="周二"
            android:gravity="center"
            android:textColor="@color/txt_666"
            android:textSize="@dimen/txt_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="周三"
            android:gravity="center"
            android:textColor="@color/txt_666"
            android:textSize="@dimen/txt_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="周四"
            android:gravity="center"
            android:textColor="@color/txt_666"
            android:textSize="@dimen/txt_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="周五"
            android:gravity="center"
            android:textColor="@color/txt_666"
            android:textSize="@dimen/txt_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="周六"
            android:gravity="center"
            android:textColor="@color/txt_666"
            android:textSize="@dimen/txt_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="周日"
            android:gravity="center"
            android:textColor="@color/txt_666"
            android:textSize="@dimen/txt_12"/>
    </LinearLayout>

    <com.longtu.base.view.ScrollGridView
        android:id="@+id/gvDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:listSelector="@color/transparent"
        android:layout_marginBottom="10dp"
        android:numColumns="7"></com.longtu.base.view.ScrollGridView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

    <ListView
        android:id="@+id/lvJobs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>

    <RelativeLayout
        android:id="@+id/rlEmpty"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:textColor="@color/txt_999"
            android:drawableTop="@mipmap/ico_no_job"
            android:text="很遗憾，没有找到查询结果"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>
