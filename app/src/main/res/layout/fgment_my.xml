<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/blue">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"
                android:src="@mipmap/ico_user"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:text="昵称"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMyMsg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/title"
                    android:text="我的信息"
                    android:drawableTop="@mipmap/mymsg"
                    android:textColor="@color/txt_333"/>

                <TextView
                    android:id="@+id/tvMyMon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/title"
                    android:text="我的钱包"
                    android:drawableTop="@mipmap/mymon"
                    android:textColor="@color/txt_333"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/line"
                android:layout_height="match_parent"
                android:background="@color/line_color"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvRz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/title"
                    android:text="实名认证"
                    android:drawableTop="@mipmap/ico_rz"
                    android:textColor="@color/txt_333"/>

                <TextView
                    android:id="@+id/tvDz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/title"
                    android:text="岗位定制"
                    android:drawableTop="@mipmap/ico_dz"
                    android:textColor="@color/txt_333"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line"
                android:layout_height="match_parent"
                android:background="@color/line_color"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/line_color"/>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/title"
                android:text="申请保送"
                android:drawableTop="@mipmap/ico_bs"
                android:textColor="@color/txt_333"/>

            <TextView
                android:id="@+id/tvShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/title"
                android:text="分享好友"
                android:drawableTop="@mipmap/ico_share"
                android:textColor="@color/txt_333"/>
        </LinearLayout>
            <View
                android:layout_width="@dimen/line"
                android:layout_height="match_parent"
                android:background="@color/line_color"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvFollow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/title"
                    android:text="我的关注"
                    android:drawableTop="@mipmap/ico_gz"
                    android:textColor="@color/txt_333"/>

                <TextView
                    android:id="@+id/tvSetting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/title"
                    android:text="软件设置"
                    android:drawableTop="@mipmap/ico_setting"
                    android:textColor="@color/txt_333"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line"
                android:layout_height="match_parent"
                android:background="@color/line_color"
                android:layout_centerInParent="true"/>
        </RelativeLayout>




    </LinearLayout>

</LinearLayout>
