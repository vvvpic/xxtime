<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include layout="@layout/header"/>

    <RelativeLayout
        android:id="@+id/rlFollow"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ico_fllow"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:text="关注信息"
            android:layout_toRightOf="@id/iv0"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_333"/>

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_arrow_right"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/ivMsgFollow"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/circle_red"
            android:layout_alignRight="@id/iv0"
            android:layout_alignTop="@id/iv0"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rlApply"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ico_br"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:text="申请消息"
            android:layout_toRightOf="@id/iv1"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_333"/>

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_arrow_right"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/ivMsgApply"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/circle_red"
            android:visibility="gone"
            android:layout_alignRight="@id/iv1"
            android:layout_alignTop="@id/iv1"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/background"/>

    <RelativeLayout
        android:id="@+id/rlSalary"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ico_salary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:text="工资消息"
            android:layout_toRightOf="@id/iv2"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_333"/>

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_arrow_right"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/ivMsgSalary"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/circle_red"
            android:visibility="gone"
            android:layout_alignRight="@id/iv2"
            android:layout_alignTop="@id/iv2"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rlWithdraw"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ico_tx"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:text="提现消息"
            android:layout_toRightOf="@id/iv4"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_333"/>

        <ImageView
            android:id="@+id/iv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_arrow_right"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/ivMsgWithdraw"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/circle_red"
            android:visibility="gone"
            android:layout_alignRight="@id/iv4"
            android:layout_alignTop="@id/iv4"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/background"/>

    <RelativeLayout
        android:id="@+id/rlSystem"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ico_system"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:text="系统消息"
            android:layout_toRightOf="@id/iv5"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_333"/>

        <ImageView
            android:id="@+id/iv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_arrow_right"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/ivMsgSystem"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:visibility="gone"
            android:src="@drawable/circle_red"
            android:layout_alignRight="@id/iv5"
            android:layout_alignTop="@id/iv5"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

</LinearLayout>
