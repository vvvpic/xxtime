<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="net.xxtime.activity.AuthenticationActivity">

    <include layout="@layout/header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        >
                        <ImageView
                            android:id="@+id/ivAddjust"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/btn_add_img_selecter"
                            android:layout_margin="6dp"
                            android:scaleType="centerCrop"/>

                        <ImageView
                            android:id="@+id/ivDeljust"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="top|right"
                            android:src="@mipmap/ico_del"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content"
                        android:textColor="@color/txt_666"
                        android:layout_gravity="center_horizontal"
                        android:text="身份证正面"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/ivAddback"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/btn_add_img_selecter"
                            android:layout_margin="6dp"
                            android:scaleType="centerCrop"/>

                        <ImageView
                            android:id="@+id/ivDelback"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="top|right"
                            android:src="@mipmap/ico_del"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content"
                        android:textColor="@color/txt_666"
                        android:layout_gravity="center_horizontal"
                        android:text="身份证反面"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSutent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/ivAddstudent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/btn_add_img_selecter"
                            android:layout_margin="6dp"
                            android:scaleType="centerCrop"/>

                        <ImageView
                            android:id="@+id/ivDelstudent"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="top|right"
                            android:src="@mipmap/ico_del"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content"
                        android:textColor="@color/txt_666"
                        android:layout_gravity="center_horizontal"
                        android:text="学生证"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content"
                    android:text="真实姓名："
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/txt_333"/>

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/content"
                    android:layout_toRightOf="@id/tv1"
                    android:layout_centerVertical="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/hint_color"
                    android:singleLine="true"
                    android:hint="请输入真实姓名"
                    android:background="@null"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/line_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content"
                    android:text="身份证号："
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/txt_333"/>

                <EditText
                    android:id="@+id/etId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/content"
                    android:layout_toRightOf="@id/tv2"
                    android:layout_centerVertical="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/hint_color"
                    android:inputType="number"
                    android:singleLine="true"
                    android:hint="请输入身份证号"
                    android:background="@null"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/line_color"/>

            <RelativeLayout
                android:id="@+id/rlStudent"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content"
                    android:text="学生证号："
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/txt_333"/>

                <EditText
                    android:id="@+id/etStudentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/content"
                    android:layout_toRightOf="@id/tv3"
                    android:layout_centerVertical="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/hint_color"
                    android:inputType="number"
                    android:singleLine="true"
                    android:hint="请输入学生证号"
                    android:background="@null"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/line_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content"
                    android:text="审核状态："
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/txt_333"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/content"
                    android:layout_toRightOf="@id/tv4"
                    android:layout_centerVertical="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/hint_color"
                    android:singleLine="true"
                    android:text="未审核"
                    android:background="@null"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/line_color"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:textSize="@dimen/content"
                android:textColor="@color/white"
                android:background="@drawable/btn_blue_seletor"
                android:text="提交"
                android:layout_height="45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_12"
                android:text="1.实名认证后更有易于被商家录用；"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/txt_999"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_12"
                android:text="2.实名认证，以保证提现的顺利。"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/txt_999"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
