<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <net.xxtime.view.TopGallery
        android:id="@+id/gyBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></net.xxtime.view.TopGallery>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="无锡市"
            android:drawableRight="@mipmap/down"
            android:textSize="@dimen/title"/>

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ico_search"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

    </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llWelfare"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                android:src="@mipmap/ic_welfare"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content"
                android:text="公益活动"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/txt_333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSocial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                android:src="@mipmap/ic_social"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content"
                android:text="社会兼职"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/txt_333"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llSchool"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                android:src="@mipmap/ic_school"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content"
                android:text="校内兼职"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/txt_333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOnline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                android:src="@mipmap/ic_online"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content"
                android:text="在线兼职"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/txt_333"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rlAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="@dimen/content"
                android:text="结算方式"
                android:gravity="center"
                android:drawableRight="@mipmap/down_arrow"
                android:layout_centerInParent="true"
                android:textColor="@color/txt_333"/>

            <View
                android:layout_width="@dimen/line"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@color/line_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="@dimen/content"
                android:text="全部日期"
                android:gravity="center"
                android:drawableRight="@mipmap/down_arrow"
                android:layout_centerInParent="true"
                android:textColor="@color/txt_333"/>

            <View
                android:layout_width="@dimen/line"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@color/line_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlSort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="@dimen/content"
                android:text="默认排序"
                android:gravity="center"
                android:drawableRight="@mipmap/down_arrow"
                android:layout_centerInParent="true"
                android:textColor="@color/txt_333"/>


        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>


</LinearLayout>
